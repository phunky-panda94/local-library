extends layout

block content
  h1=title

    form(method='POST' action='')
        div.form-group
            label(for='firstName') First Name:
            input.form-control(type='text' placeholder='First name' name='firstName' required='true' value=(undefined===author ? '' : author.firstName))
            label(for='lastName') Family Name:
            input.form-control(type='text' placeholder='Last name' name='lastName' required='true' value=(undefined===author ? '' : author.lastName))
        div.form-group
            label(for='dateOfBirth') Date of birth:
            input.form-control(type='date' name='dateOfBirth' value=(undefined===author ? '' : author.dateOfBirth) )
    button.btn.btn-primary(type='submit') Submit
    if errors
        ul
            for error in errors
                li!= error.msg
